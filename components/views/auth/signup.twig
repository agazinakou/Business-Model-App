{% extends "layouts/master.twig" %}


{% block content %}

    <div class="ui-container ui-small">
      <div class="mb-50">
        <h3>Feel the greatness </h3>
      </div>

      <form action="">

        <div class="form-group">
          <label for="signup-form-email">Name</label>
          <input type="text" class="form-control" id="signup-form-email" placeholder="Alex Smith">
        </div>

        <div class="form-group">
          <label for="signup-form-email">Email</label>
          <input type="email" class="form-control" id="signup-form-email" placeholder="your@email.com">
        </div>


        <div class="form-group">
          <label for="signup-form-password">Password</label>
          <input type="password" class="form-control" id="signup-form-password" placeholder="password">
        </div>
        <div class="form-group">
          <button class="btn btn-primary w-100 form-button" type="submit">Get Started</button>
        </div>
      </form>

      <div class="text-center">
        <span>Already have an account?
          <a href="signin">Login</a>
        </span>
      </div>

    </div>

{% endblock %}
